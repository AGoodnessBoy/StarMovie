<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.moming.jml.starmovie.MainActivity">

    <!-- The static MasterListFragment -->
    <fragment
        android:id="@+id/movie_list_fragment"
        android:name="com.moming.jml.starmovie.fragment.MovieListFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent" />

    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />


    <fragment
        android:id="@+id/movie_detail_fragment"
        android:name="com.moming.jml.starmovie.fragment.MovieDetailFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />





</LinearLayout>
